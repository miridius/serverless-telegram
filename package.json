{
  "name": "serverless-telegram",
  "description": "A simple library to remove some of the repetitive work in creating servlerless telegram bots",
  "version": "0.8.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/miridius/serverless-telegram.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "serverless",
    "azure"
  ],
  "author": "David D. Rolle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miridius/serverless-telegram/issues"
  },
  "homepage": "https://github.com/miridius/serverless-telegram",
  "engines": {
    "node": "^16 || ^18 || ^20"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/serverless-telegram.esm.js",
  "bin": {
    "start-dev-server": "bin/start-dev-server.js",
    "set-webhook": "bin/set-webhook.js",
    "delete-webhook": "bin/delete-webhook.js"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --ci --no-cache",
    "test:watch": "tsdx test --watchAll --no-cache",
    "test:env": "env-cmd tsdx test",
    "lint": "eslint src test",
    "prepare": "husky install && tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "check": "pnpm install-test && pnpm lint && pnpm outdated --compatible && pnpm audit -P && pnpm size",
    "update-deps": "pnpm-update-bisect && pnpm audit --fix && pnpm check",
    "release": "pnpm check && pnpm np --no-cleanup"
  },
  "dependencies": {
    "@azure/functions": "^1.2.3",
    "@types/node-telegram-bot-api": "^0.64.6",
    "form-data": "^4.0.0",
    "node-fetch": "^2.7.0",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.84",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@types/node-fetch": "^2.6.11",
    "env-cmd": "^10.1.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "jest": "^27.5.1",
    "nock": "^13.5.4",
    "np": "^10.0.3",
    "pnpm-update-bisect": "^0.3.0",
    "prettier": "^3.2.5",
    "size-limit": "^11.1.2",
    "size-limit-node-esbuild": "^0.3.0",
    "size-limit-preset-node-lib": "^0.3.0",
    "ts-jest": "^29.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.5.0"
  },
  "pnpm": {
    "overrides": {
      "jest": "^29",
      "ts-jest": "^29",
      "typescript": "^5",
      "word-wrap@<1.2.4": ">=1.2.4",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "size-limit": [
    {
      "path": "dist/serverless-telegram.cjs.production.min.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/serverless-telegram.esm.js",
      "limit": "25 KB"
    }
  ]
}
