{
  "name": "serverless-telegram",
  "description": "A simple library to remove some of the repetitive work in creating servlerless telegram bots",
  "version": "0.3.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/miridius/serverless-telegram.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "serverless",
    "azure"
  ],
  "author": "David D. Rolle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miridius/serverless-telegram/issues"
  },
  "homepage": "https://github.com/miridius/serverless-telegram",
  "engines": {
    "node": "^14"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/serverless-telegram.esm.js",
  "bin": {
    "start-dev-server": "bin/start-dev-server.js"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --ci",
    "test:watch": "tsdx test --clearCache && tsdx test --watchAll",
    "test:env": "env-cmd tsdx test",
    "lint": "tsdx lint src test",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "update-deps": "npx ncu -u && yarn install && yarn lint && yarn test",
    "release": "npx ncu -e2 && npx np"
  },
  "dependencies": {
    "@azure/functions": "^1.2.3",
    "form-data": "^3.0.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/node-fetch": "^2.5.8",
    "@types/node-telegram-bot-api": "^0.51.0",
    "env-cmd": "^10.1.0",
    "husky": "3",
    "nock": "^13.0.7",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.4"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4",
    "**/@typescript-eslint/parser": "^4",
    "**/eslint": "^7",
    "**/jest": "^26",
    "**/prettier": "^2",
    "**/ts-jest": "^26",
    "**/typescript": "^4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/serverless-telegram.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/serverless-telegram.esm.js",
      "limit": "10 KB"
    }
  ]
}
